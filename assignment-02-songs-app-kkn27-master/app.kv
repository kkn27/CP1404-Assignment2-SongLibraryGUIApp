# create your Kivy layout in the kv language here
BoxLayout:
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.2
        Label:
            text: 'Sort by:'
        Spinner:
            id: sort_options
            text: 'Artist'
            on_text: app.song_sorter()
        Label:
            text: 'Add New Song'
        Label:
            text: 'Title'
        TextInput:
            id: song_title
            text: ''
        Label:
            text: 'Artist'
        TextInput:
            id: song_artist
            text: ''
        Label:
            text: 'Year'
        TextInput:
            id: song_year
            text: ''
        Button:
            text: 'Add Song'
            on_press: app.handle_add_song()
        Button:
            text: 'Clear'
            on_press: app.clear_fields()
    BoxLayout:
        orientation: 'vertical'
        Label:
            size_hint_y: 0.2
            id: learned_value
            text: ''
        BoxLayout:
            orientation: 'vertical'
            id: song_buttons
        Label:
            size_hint_y: 0.2
            id: label_text_id
            text: ''
